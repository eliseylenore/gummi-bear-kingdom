@{
    ViewData["Title"] = "Gummi Bear Kingdom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<GummiBearKingdom.Models.Product>
<h2>Gummies!</h2>

@foreach (var product in Model)
{
    <div class="col-lg-3 col-md-4 col-sm-6 gummi-display">
        <h4> @Html.ActionLink(product.Name, "Details", new { id = product.ProductId })</h4>
    </div>
}



<div>@Html.ActionLink("Add new product", "Create", new { @class = "btn btn-success" })</div>