@{
    ViewData["Title"] = "Gummi Bear Kingdom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model GummiBearKingdom.Models.Product

<h2>Edit</h2>
<hr />
<h4>Edit this item: @Html.DisplayFor(model => model.Name)</h4>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.HiddenFor(model => model.ProductId)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Cost)
        @Html.EditorFor(model => model.Cost, new { @class = "form-control", type = "number", min = "0", max = "100", step = "any" })
    </div>
    <div class="form-group">
        <label for="CountryOfOrigin">Country of Origin</label>
        @Html.EditorFor(model => model.CountryOfOrigin, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="ImageUrl">Image Url (copy and paste Url here)</label>
        @Html.EditorFor(model => model.ImageUrl, new { @class = "form-control" })
    </div>
        <input type="submit" value="Save" class="btn btn-warning" />
        }
        @Html.ActionLink("Back to List", "Index")
