@{
    ViewData["Title"] = "Gummi Bear Kingdom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GummiBearKingdom.Models.Product

<h2>Create</h2>
<h4>Add a new product</h4>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Cost)
        @Html.TextBoxFor(model => model.Cost, new { @class = "form-control", type = "number", min = "0", max = "100", step="any" })
    </div>
    <div class="form-group">
        <label for="Country of Origin">Country of Origin</label>
        @Html.TextBoxFor(model => model.CountryOfOrigin, new { @class = "form-control" })
    </div>

        <input type="submit" value="Add new product" class="btn btn-success" />
        }
